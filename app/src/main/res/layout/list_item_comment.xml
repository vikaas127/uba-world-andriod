<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginStart="@dimen/dp8">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="@dimen/dp48"
                android:layout_height="@dimen/dp48"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/ic_man"
                app:civ_border_color="@android:color/darker_gray"
                app:civ_border_width="@dimen/dp1" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_Verified"
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp24"
                android:src="@drawable/ic_verify"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_Comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginRight="@dimen/dp16"
                android:background="@drawable/bg_gray_corner"
                android:fontFamily="@font/montserrat_light"
                android:padding="@dimen/dp16"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/ll_Like"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp24"
                android:minWidth="@dimen/dp68"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginRight="@dimen/dp8"
                android:layout_marginBottom="-8dp"
                android:elevation="@dimen/dp2"
                android:paddingLeft="@dimen/dp12"
                android:paddingRight="@dimen/dp12"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@id/tv_Reply"
                android:background="@drawable/bg_like_white_corner"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_Like"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_gravity="center"
                    android:src="@drawable/black_dislike_icon"/>

                <Space
                    android:layout_width="@dimen/dp4"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_Like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="@color/black"/>

            </LinearLayout>

<!--            <EditText-->
<!--                android:id="@+id/et_Reply"-->
<!--                android:layout_below="@id/tv_Comment"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/dp40"-->
<!--                android:layout_marginTop="@dimen/dp16"-->
<!--                android:layout_marginBottom="@dimen/dp16"-->
<!--                android:layout_marginLeft="@dimen/dp16"-->
<!--                android:layout_marginRight="@dimen/dp24"-->
<!--                android:background="@drawable/bg_gray_reply_border_corner"-->
<!--                android:hint="@string/str_write_a_reply"-->
<!--                android:fontFamily="@font/montserrat_light"-->
<!--                android:imeOptions="actionNext"-->
<!--                android:inputType="text"-->
<!--                android:maxLines="1"-->
<!--                android:paddingLeft="@dimen/dp16"-->
<!--                android:paddingRight="@dimen/dp16"-->
<!--                android:singleLine="true"-->
<!--                android:textColorHint="@color/gray"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="@dimen/sp16" />-->

            <TextView
                android:id="@+id/tv_Reply"
                android:layout_below="@id/tv_Comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp24"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp16"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp24"
                android:background="@drawable/bg_gray_reply_border_corner"
                android:text="@string/str_write_a_reply"
                android:fontFamily="@font/montserrat_light"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>